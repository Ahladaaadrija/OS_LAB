#include <stdio.h>
 First Fit Memory Allocation Program in C
 void firstfit(int f[], int b[], int nb, int nf) {
    int i, j, temp, flag;
    for(i = 0; i < nf; i++) {
        flag = 0;
        for(j = 0; j < nb; j++) {
            temp = b[j] - f[i];
            if(temp >= 0) {
                printf("File %d is put in block of size %d\n", f[i], b[j]);
                b[j] = 0;
                flag = 1;
                break;
            }
        }
        if(flag == 0) {
            printf("File size %d must wait\n", f[i]);
        }
    }
 }
 int main() {
    int nb, nf, i;
    printf("Enter the number of files: ");
    scanf("%d", &nf);
    int f[nf];
    printf("Enter the number of blocks: ");
    scanf("%d", &nb);
    int b[nb];
    printf("Enter the block sizes in order:\n");
    for(i = 0; i < nb; i++) {
        scanf("%d", &b[i]);
    }
    printf("Enter the file sizes in order:\n");
    for(i = 0; i < nf; i++) {
        scanf("%d", &f[i]);
    }
    firstfit(f, b, nb, nf);
    return 0;
 }
